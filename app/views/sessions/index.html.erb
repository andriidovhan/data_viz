<h1>Data visualization</h1>


  <div class="col-xs-6">
    <h3>Amount of build per day</h3>
    <%= line_chart @sessions.group_and_count_per_day %>

    <h3>Amount of build per day(granulated)</h3>
    <%= line_chart @sessions.group(:summary_status).group_and_count_per_day %>

    <h3>Build duration</h3>
    <%= line_chart @sessions.pluck(:created_at, :duration), xtitle: "Day", ytitle: "Duration" %>

    <h3>Abnormal(% of failed builds)</h3>
    <%= line_chart @abnormal,  xtitle: "Day", ytitle: "Percent of failed build" %>
  </div>
